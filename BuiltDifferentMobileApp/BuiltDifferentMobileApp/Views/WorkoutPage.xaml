<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             xmlns:behaviors="http://xamarin.com/schemas/2020/toolkit"
             x:Class="BuiltDifferentMobileApp.Views.WorkoutPage"
             x:Name="TheWorkoutPage">
    <ContentPage.Content >
        <StackLayout Margin="20">
            <Label Text="Client Name Workouts" TextColor="Black" FontSize="Title" HorizontalTextAlignment="Center"/>
            <Button Text="Manange Meals"/>
            <CollectionView>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <FlexLayout>
                            <Button Text="12"/>
                        </FlexLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <StackLayout>
                <Label Text="Week____ " HorizontalOptions="Center"/>
                <FlexLayout BackgroundColor="Gray">
                    <Button Text="S" TextColor="Black" BackgroundColor="White" Margin="5" CornerRadius="100" Command="{Binding WeekdayCommand}"/>
                    <Button Text="M" TextColor="Black" BackgroundColor="White" Margin="5" CornerRadius="100" Command="{Binding WeekdayCommand}"/>
                    <Button Text="T" TextColor="Black" BackgroundColor="White" Margin="5" CornerRadius="100" Command="{Binding WeekdayCommand}"/>
                    <Button Text="W" TextColor="Black" BackgroundColor="White" Margin="5" CornerRadius="100" Command="{Binding WeekdayCommand}"/>
                    <Button Text="T" TextColor="Black" BackgroundColor="White" Margin="5" CornerRadius="100" Command="{Binding WeekdayCommand}"/>
                    <Button Text="F" TextColor="Black" BackgroundColor="White" Margin="5" CornerRadius="100" Command="{Binding WeekdayCommand}"/>
                    <Button Text="S" TextColor="Black" BackgroundColor="White" Margin="5" CornerRadius="100" Command="{Binding WeekdayCommand}"/>
                </FlexLayout>

            </StackLayout>

            <!--InsertCommand when rerteieved mealS-->
            <CollectionView 
                ItemsSource="{Binding Workouts}"
                            SelectionMode="Single">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                       
                        <Grid>
                            <behaviors:Expander>
                                <behaviors:Expander.Header>
                                    <Grid
                                Padding="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Label 
                                    Grid.Column="0" 
                                    Text="{Binding workoutName}"
                                    FontAttributes="Bold"
                                    FontSize="Small" />
                                        <Label 
                                    Grid.Column="1"
                                    HorizontalTextAlignment="End"
                                    Text="{Binding sets, StringFormat='Sets {0}'}"
                                    FontAttributes="Bold"
                                    FontSize="Small"/>
                                        <Label 
                                    Grid.Column="2"
                                    HorizontalTextAlignment="End"
                                    Text="{Binding reps, StringFormat='Reps {0}'}"
                                    FontAttributes="Bold"
                                    FontSize="Small" />
                                        <Label 
                                    Grid.Column="4"
                                    HorizontalTextAlignment="End"
                                    FontSize="Large"
                                    FontFamily="FAS" 
                                    Text="&#xf107;"/>
                                    </Grid>
                                </behaviors:Expander.Header>
                                <behaviors:Expander.ContentTemplate>
                                    <DataTemplate>
                                        <Grid 
                                    Padding="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button 
                                        Text="Edit"
                                        Grid.Column="3"
                                        Padding="2"
                                        CornerRadius="10"
                                                Command="{Binding Source={x:Reference TheWorkoutPage}, Path=BindingContext.EditCommand}" CommandParameter="{Binding .}"
                                        />
                                        </Grid>
                                    </DataTemplate>
                                </behaviors:Expander.ContentTemplate>
                            </behaviors:Expander>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
               
                <CollectionView.EmptyView>
                    <StackLayout HorizontalOptions="Center">
                        <Image 
                            IsAnimationPlaying="True"
                            WidthRequest="200"
                            HeightRequest="200" />
                        <Label 
                            Text="Add Some Workouts"
                            HorizontalTextAlignment="Center"
                            Padding="20,10,10,10"
                            />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
            <StackLayout Margin="10">
                <Button 
                Text="Add New"
                Grid.Column="3"
                Command="{Binding AddCommand}"
                Padding="2"
                CornerRadius="10"
                />
            </StackLayout>
            
        </StackLayout>

    </ContentPage.Content>
</ContentPage>